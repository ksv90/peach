{
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "src",
    "declaration": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@peach/components": ["components"],
      "@peach/config": ["config"],
      "@peach/contexts": ["contexts"],
      "@peach/core": ["core"],
      "@peach/utils": ["utils"]
    }
  }
}
